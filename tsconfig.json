{
  "compilerOptions": {
    // "target": "es5",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/app/components/*"],
      "@/utils/*": ["./src/app/utils/*"],
      "@/page-sections/*": ["./src/app/page-sections/*"],
      "@/data/*": ["./src/app/data/*"],
      "@/hooks/*": ["./src/app/hooks/*"],
      "@/models/*": ["./src/app/models/*"],
      "@/redux/*": ["./src/redux/*"],
      "@/firebase": ["./firebase.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
